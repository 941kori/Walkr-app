<p id="notice"><%= notice %></p>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2">
    <h1 style="margin-left:0.25em">Dogs</h1>
  </div>

  <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2">
    <div class="pure-button-right" style="margin-right:0.25em"><%= link_to 'Add a Dog', new_dog_path %></div>
  </div>

  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3 yellow-back">
    <h4>Picture</h4>
  </div>

  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3 yellow-back">
    <h4>Name & Description</h4>
  </div>

  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3 yellow-back">
    <h4>Review</h4>
  </div>

</div>

<div class="pure-g">

  <% @dogs.each do |dog| %>

    <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3">
      <img style="max-width:100%" src="<%= dog.picture %>" alt="<%= dog.name %>" >
    </div>

    <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3" style="padding:1em">
      <h3><%= link_to dog.name, dog_path(dog) %></h3>
      <p><%= dog.description %></p>
      <div class="pure-button-left" style="margin-right:0.25em"><%= link_to 'View Dog', dog_path(dog) %></div>
    </div>

    <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3" style="padding:1em">
      <p><%= dog.rating %></p>
      <p><%= link_to 'Edit', edit_dog_path(dog) %></p>
      <p><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></p>
     </div>

  <% end %>

</div>

<br>
