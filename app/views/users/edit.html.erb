<div class="pure-g">

  <div class="pure-u-1">
    <h1 style="margin-left:0.25em; margin-top:1em">Edit User</h1>
  </div>

</div>

<div class="pure-u-1 yellow-back">
  <p class="is-left"><%= link_to 'View this User', @user %></p>
</div>

<div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3"><img style="max-width:100%" src="<%= @user.picture %>" alt="<%= @user.name %>" ></div>

<div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2" style="padding:1em">

  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>

  <div class="gravatar_edit">
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails" target="_blank">change</a>
  </div>

</div>

<div class="pure-u-1 yellow-back">
  <p class="is-left"><%= link_to 'View this User', @user %></p>
</div>


