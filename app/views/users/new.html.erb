<% provide(:title, 'Sign up') %>

<div class="pure-g">

  <div class="pure-u-1">
    <h1 style="margin-left:0.25em; margin-top:1em">Sign up</h1>
  </div>

</div>

<div class="pure-u-1 yellow-back"><p><br></p></div>

<div class="pure-u-1 pure-u-md-1-4 pure-u-lg-1-4"><p><br></p></div>

<div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2" style="padding:1em">

  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <label>I am a</label>
    <%= f.select :type, options_for_select([["Select One", ""], "Dog", "Walkr"]) %>

    <div class="pure-button-full">
    <%= f.submit "Sign up" %>
  <% end %>
  </div>
  
</div>

<div class="pure-u-1 yellow-back"><p><br></p></div>
