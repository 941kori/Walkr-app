<p id="notice"><%= notice %></p>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2">
    <h1 style="margin-left:0.25em">Walkrs</h1>
  </div>

  <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-2">
    <div class="pure-button-right" style="margin-right:0.25em; margin-top:2em;"><%= link_to 'Add a Walkr', new_walkr_path %></div>
  </div>

  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3 yellow-back">
    <h4>Picture</h4>
  </div>

  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3 yellow-back">
    <h4>Name & Description</h4>
  </div>

  <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3 yellow-back">
    <h4>Rating</h4>
  </div>

</div>

<div class="pure-g">

  <% @walkrs.each do |walkr| %>

    <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3">
      <img style="max-width:100%" src="<%= walkr.picture %>" alt="<%= walkr.name %>" >
    </div>

    <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3" style="padding:1em">
      <h3><%= link_to walkr.name, walkr_path(walkr) %></h3>
      <p><%= walkr.description %></p>
      <p><a href="mailto:<%= walkr.email %>"><%= walkr.email %></a></p>
      <div class="pure-button-left" style="margin-right:0.25em"><%= link_to 'View Walkr', walkr_path(walkr) %></div>
    </div>


    <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-3" style="padding:1em; padding-top:2em">
      <p><%= walkr.rating %></p>
      <i class="fa fa-star" style="color:red; font-size:30px"></i><i class="fa fa-star" style="color:red; font-size:30px"></i><i class="fa fa-star" style="color:red; font-size:30px"></i><i class="fa fa-star" style="color:red; font-size:30px"></i><i class="fa fa-star" style="font-size:30px"></i>
      <% if current_user.present? %>
      <% if dog.user_id == current_user.id %>
      <p><%= link_to 'Edit', edit_walkr_path(walkr) %></p>
      <p><%= link_to 'Destroy', walkr, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %>
      <% end %>
     </div>

  <% end %>

</div>

<div class="pure-u-1 yellow-back">
  <p class="is-left">Group 5, Copyright 2015</p>
</div>
